<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="CharCounter" owl="1">
        <div class="p-3 border rounded shadow-sm bg-white">
            <label class="form-label fw-bold">Project Description</label>
            
            <!-- t-ref connects this textarea to this.textareaRef in JS -->
            <textarea t-ref="myTextarea" 
                      class="form-control" 
                      placeholder="Type your notes here..."></textarea>
            
            <div class="mt-2 text-end">
                <span class="badge rounded-pill bg-info text-dark">
                    Characters: <t t-esc="state.count"/>
                </span>
            </div>
        </div>
    </t>
</templates>







