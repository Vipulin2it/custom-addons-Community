<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_property_mail_wizard_form" model="ir.ui.view">
        <field name="name">property.mail.wizard.form</field>
        <field name="model">property.mail.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Property Email">
                <group>
                    <field name="property_id"/>
                    <field name="email_to"/>
                    <field name="subject"/>
                    <field name="body_html"/>
                </group>

                <footer>
                    <button name="action_send_mail"
                            string="Send"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
