<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_external_layout_estate"
              inherit_id="web.external_layout_standard" >

        <xpath expr="//div[contains(@t-attf-class, 'header o_company_')]"
               position="replace">

            <t t-set="company" t-value="env.company"/>

            <div class="header">
                <table style="width:100%; border-bottom:1px solid #ddd;">
                    <tr>

                        <!-- LEFT : COMPANY DETAILS -->
                        <td style="width:40%; vertical-align:top;">
                            <strong><t t-esc="company.name"/></strong>
                            <p style="margin:0;" t-if="company.street">
                                <t t-esc="company.street"/>
                            </p>
                            <p style="margin:0;">
                                <t t-if="company.city"><t t-esc="company.city"/></t>
                                <t t-if="company.zip"> - <t t-esc="company.zip"/></t>
                            </p>
                            <p style="margin:0;" t-if="company.phone">
                                Phone: <t t-esc="company.phone"/>
                            </p>
                        </td>

                        <!-- CENTER : LOGO -->
                        <td style="width:20%; text-align:center; vertical-align:top;">
                            <img t-if="company.logo"
                                 t-att-src="image_data_uri(company.logo)"
                                 style="max-height:70px;"
                                 alt="Logo"/>
                        </td>

                        <!-- RIGHT : PAGE NUMBER -->
                        <td style="width:40%; text-align:right; vertical-align:top; font-size:12px;">
                            <!-- <p style="margin:0;">
                                Page <span class="page"/> / <span class="topage"/>
                            </p> -->
                            <!-- <p><span t-esc="context_timestamp(datetime.datetime.now())"/></p> -->

                        </td>

                    </tr>
                </table>
            </div>

        </xpath>
    </template>

 
    <template id="estate_property_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">

                <!-- CALL CUSTOM HEADER -->
                <t t-call="mycompany_custom.custom_external_layout_estate">

                    

                </t>
            </t>
        </t>
    </template>

   
    <record id="estate_property_report_action" model="ir.actions.report">
        <field name="name">Property Card</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mycompany_custom.estate_property_report_template</field>
        <field name="report_file">mycompany_custom.estate_property_report_template</field>
        <field name="binding_model_id" ref="mycompany_custom.model_estate_property"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
