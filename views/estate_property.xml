<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
            <header>
                    <button name="edit_button" string="Edit" type='object' class="oe_highlight" display="always"/>
                    <button name="create_button" string="Create" type='object' class="oe_highlight" display="always"/>
                   <button name="action_send_msg" string="Enquiry" type="object" class="oe_stat_button" />
            </header>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="owners_list"/>
                <field name="shared_owner_ids"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="edit_button" string="Edit" type='object' class="oe_highlight" display="always"/>
                    <button name="create_button" string="Create" type='object' class="oe_highlight" display="always"/>
                </header>
                <sheet>
                    <h1 style="">New House</h1>
                    
                    <group>
                        <group>
                        <field name="name"/>
                        <field name="postcode"/>
                        <field name="date_available"/>
                        <!-- <field name="name"/> -->
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description" class="oe_highlight">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="garage"/>
                                <field name="garden"/>
                            </group>
                        </page>
                        <page string="Owner_list">
                            <group>
                                <field name="owners_list"/>  
                                <field name="shared_owner_ids"/>
                            </group> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_estate_root" name="Estate"/>

    <menuitem
        id="menu_estate_property"
        name="Properties"
        parent="menu_estate_root"
        action="action_estate_property"/>








     <!-- treeview  -->
    <record id="estate_property__offer_tree_view" model='ir.ui.view'>
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="owner_id"/>
                <field name="owner_contact"/>
                <field name="person_gender"/>
                <field name="price"/>
                
                <field name="binary_file"/>
                <field name="html_file"/>
                <field name="image_file"/>
                <field name="currency" widget="monetary" />
                <field name="deadline_date"/>
            </tree>
        </field>
    </record>


     form view 
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.propert.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
                <sheet>
                    <group>
                        <group>
                        <field name="owner_id"/>
                        <field name="owner_contact"/>
                        <field name="image_file"/>
                        <field name="currency" widget="monetary"/>
                        <field name="price"/>
                        <field name="person_gender"/>
                        
                        
                        </group>

                        <group>
                        
                        <field name="binary_file"/>
                        <field name="html_file"/>
                        <field name="deadline_date"/>
                        <button name="action_test" string="Test Object button" type="object" class="oe_highlight"/>
                        <button name="%(mycompany_custom.action_owner)d" type="action" string="test_action_button" class="oe_highlight"/>

                        </group>

                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>



     <!-- actions  -->

    <record id="actions_estate_property_offer" model="ir.actions.act_window"> 
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">kanban,tree,form</field>
         <field name="view_id" ref="estate_property__offer_tree_view"/> 
    </record>

     menu item
    <menuitem 
        id="menu_item_estate_property_offer"
        name="Offers"
        parent="menu_estate_root"
        action="actions_estate_property_offer"
    /> 




        
</odoo>

